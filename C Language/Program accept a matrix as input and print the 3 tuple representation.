#include<stdio.h>

void main()
{
    int a[5][5],rows,column,i,j;
    
    printf("Enter the order of matrix.The order should be less than 5x5\n");
    scanf("%d %d",&rows,&column);
    printf("Enter the elements of matrix\n");
    
    for( i=0; i < rows ;i++)
        for( j= 0; j< column; j++)
        {
            scanf("%d",&a[i][j]);
        }
        printf("The 3 tulpe representation of matrix:\n");
        
        for(i=0;i< rows;i++)
            for(j=0;j< column;j++)
            {
                if(a[i][j]!=0)
                {
                    printf("%d %d %d\n",(i+1),(j+1),a[i][j]);
                }
            }
        
    
    
}
